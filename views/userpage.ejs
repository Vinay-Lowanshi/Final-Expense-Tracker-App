    }

    h1 {
      background-color: #2c3e50;
      color: #ecf0f1;
      text-align: center;
      padding: 10px;
      margin: 0;
    }

    form {
      margin: 20px;
      padding: 10px;
      background-color: #ffffff;
      border-radius: 5px;
      box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
    }

    table {
      margin: 20px;
      background-color: #ffffff;
